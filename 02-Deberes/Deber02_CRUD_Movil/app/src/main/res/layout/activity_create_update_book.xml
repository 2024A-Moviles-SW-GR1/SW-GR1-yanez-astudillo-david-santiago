<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateUpdateBook">

    <EditText
        android:id="@+id/input_titulo_book"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Ingrese el título"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_id_book"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_id_book"
        app:layout_constraintTop_toBottomOf="@+id/input_id_book"
        app:layout_constraintVertical_bias="0.087" />

    <EditText
        android:id="@+id/input_fecha_pub_book"
        android:layout_width="275dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Ingrese la fecha de publicación"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_titulo_book"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/input_titulo_book"
        app:layout_constraintTop_toBottomOf="@+id/input_titulo_book" />

    <EditText
        android:id="@+id/input_genero_book"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Ingrese el género"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_fecha_pub_book"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/input_fecha_pub_book"
        app:layout_constraintTop_toBottomOf="@+id/input_fecha_pub_book" />

    <Button
        android:id="@+id/btn_crear_actualizar_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confimar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_create_update_book"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_id_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:hint="Ingrese un id (entero)"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>